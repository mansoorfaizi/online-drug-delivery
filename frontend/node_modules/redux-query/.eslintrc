{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:import/recommended", "plugin:flowtype/recommended"],
  "plugins": ["flowtype", "import"],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": false
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
